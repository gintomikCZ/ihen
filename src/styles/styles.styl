.flex-centered
  display: flex
  justify-content: center

.page-content, .month-page-content 
  flex: 0 0 auto
  display: flex
  min-width: 0rem
  flex-direction: column
  align-items: center

.page-buttons 
  margin-top: 1rem
  align-self: center
  max-width: 200px

.page-buttons > *:not(:last-child) 
  margin-bottom: 0.2rem

.page-eggs 
  display: flex
  flex-direction: column

.egg-group 
  display: flex
  justify-content: center
  margin: 0.8rem 0

.egg-cell 
  display:  flex
  min-width: 44px
  min-height: 66px
  align-items: center
  flex-direction: column
  justify-content: center
  border: 1px solid var(--border)
  border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%
  margin: 0 4px

.egg-cell:last-child 
    margin-right: 0

@media only screen and (min-width: 450px) {
  .page-content {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
  }
  .page-content > *:first-child {
    flex: 0 0 48%;
  }
  .page-content > *:last-child {
    flex: 0 0 48%;
  }
  .page-buttons {
    margin-top: 0;
  }
}
@media only screen and (min-width: 700px) {
  .month-page-content {
    flex-direction: row;
    justify-content: space-between;
  }
}
.egg-index
  flex: 0 0 22px
  background: #efefef
  color: var(--text-color-dark)
  font-size: 1.3rem

.egg-weight 
  color: var(--text-color-dark)
  font-weight: 600
  font-family: var(--font-family-text)
  font-size: 1.4rem

.egg-weight > *:last-child 
    margin-left: .3rem

.egg-edit-popover-field 
  margin: 2rem 

.egg-edit-popover 
  position: absolute
  display: flex
  flex-direction: column
  border-radius: var(--border-radius)
  box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.24)
  padding: 1rem 1.5rem
  background: var(--secondary100)

.egg-edit-popover-message 
  color: var(--text-color-dark)
  padding: 0 0 1rem
  border-bottom: 1px solid var(--border)
  font-size: 1.6rem
  font-weight: 600

.egg-edit-popover-buttons 
  padding-top: 1.5rem
  display: flex
  justify-content: flex-end

.egg-edit-popover-buttons > *:first-child 
  margin-right: 1rem

.page-eggs-edit 
  position: relative
  margin-top: 1rem

